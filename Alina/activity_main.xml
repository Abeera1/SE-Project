<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alina.seprojecttracker.MainActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"
        android:maxHeight="200dp"
        android:scaleType="fitCenter"


        />
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/welcomemsg"
        android:layout_below="@id/logo"/>
    <Button
        android:id="@+id/loginbutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:onClick="openNextScreen"
        android:layout_below="@id/welcome"
        android:layout_centerHorizontal="true"
    />
    <TextView
        android:id="@+id/or1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginbutton1"
        android:layout_centerHorizontal="true"
        android:text="@string/or" />

    <Button
        android:id="@+id/signupbutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup1"
        android:onClick="openNextScreen"
        android:layout_below="@id/or1"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/or2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupbutton1"
        android:layout_centerHorizontal="true"
        android:text="@string/or" />
    <Button
        android:id="@+id/signupbutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup2"
        android:onClick="openNextScreen"
        android:layout_below="@id/or2"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
